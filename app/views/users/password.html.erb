
<div class="posts">

<h3>Change your password below</h3>

<%= form_for current_user do |f| %>
	
	<%= render partial: 'errors' %>

	<div>
		
		<%= f.password_field  :current_password , :placeholder=> "current password" %>
	</div>

	<%= render partial: 'password', locals: {f: f} %>
	<div>
	<%= f.submit "change password" %>
	</div>

<% end %>

</div>