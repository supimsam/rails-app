<!DOCTYPE html>
<html>
<head>
  <title>Title</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'shared/header' %>

	<main>
		<% if flash[:notice] %>
			<div><%= flash[:notice] %></div>
		<% end %>
		<% if flash[:alert] %>
			<div><%= flash[:alert] %></div>
		<% end %>


		<%= yield %>
	</main>

</body>
</html>
